# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URI=mongodb://admin:admin123456@localhost:27017/ecommerce_core?authSource=admin

# JWT
JWT_SECRET=your-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d

# Strapi Connection
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your-strapi-api-token-from-strapi-admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# S3 Storage (FPT Storage / AWS S3 Compatible)
S3_ENDPOINT=https://s3.fpt.vn
S3_REGION=hcm
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=your-bucket-name
S3_CDN_URL=https://cdn.your-domain.com

# Payment - VNPay
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3001/api/payments/vnpay/callback

# Payment - MoMo
MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_REDIRECT_URL=http://localhost:3000/checkout/success
MOMO_IPN_URL=http://localhost:3001/api/payments/momo/ipn

# Frontend URL (for redirects and CORS)
FRONTEND_URL=http://localhost:3000
